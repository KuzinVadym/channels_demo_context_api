{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es2017",
    "lib": [ "es2017" ],
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules",
    ".idea"
  ]
}